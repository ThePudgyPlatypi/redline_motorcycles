<div class="row">
  <div class="column small-12" id="header">
    <div class="text-right" id="bottom-right-header">
      <h1>Redline</h1>
      <h2>Motorcycles</h2>
      <h2>Store</h2>
    </div>
  </div>
</div>

<div class="row column text-center" id="nav_sticky">
  <h2>Our Newest Products</h2>
  <hr>
</div>

<div class="row small-up-2 large-up-4 carbonRow">
  <% @newestProducts.each do |f| %>
    <div class="column column-block">
      <h5><%= f.title %></h5>
      <%= link_to(image_tag("#{f.picURL}", :class => "thumbnail"), f) %>
      <p><%= f.startPrice %></p>
      <%= link_to('Buy', f, :class => "button expanded") %>
    </div>
  <% end %>
  <hr>
</div>

<div class="row column text-center colorRow">
  <h2>Our Featured Product</h2>
  <hr>
</div>

<div class="row">
  <div class="small-8 small-centered column">
    <div class="small-6 column">
      <%= image_tag("#{@featuredProduct.picURL}") %>
    </div>
    <div class="small-6 column">
      <h5><%= @featuredProduct.title %></h5>
      <table>
        <tbody>
          <tr width="100">
            <td>Condition:</td>
            <td><%= @condition %></td>
          </tr>
          <tr>
            <td>For:</td>
            <td><%= @featuredProduct.brand %></td>
          </tr>
          <tr>
            <td>Part Number:</td>
            <td><%= @featuredProduct.manufacturerPartNumber %></td>
          </tr>
          <tr>
            <td>Free Shipping:</td>
            <td><%= @featuredProduct.manufacturerPartNumber ? "Yes" : "No" %></td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>
