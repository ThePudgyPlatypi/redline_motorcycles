<div class="row" id="navigation">
  <div class="title-bar" data-responsive-toggle="responsive_toggle" data-hide-for="medium">
    <button class="menu-icon" type="button" data-toggle="example-menu"></button>
    <div class="title-bar-title">Menu</div>
  </div>

  <div class="column small-12 top-bar" id="responsive_toggle">
    <div class="top-bar-title" class="no_hover">
        <%= link_to('/') do %>
          <%= image_tag('RedlineLogo_redesign', alt: "Redline Motorcycles Navigation Bar Logo") %>
        <% end %>
    </div>
    <div class="top-bar-left">
      <ul class="dropdown menu" data-dropdown-menu>
        <li>
          <%= link_to('Services', "/redline_motorcycles/repair") %>
        </li>
        <% category.each do |category| %>
        <li>
          <%= link_to(category.category_name, category_path(category.id)) %>
          <ul class="menu">
            <% category.subcategories.each do |subcategory| %>
              <li>
                <%= link_to(subcategory.subcategory_name, subcategory_path(subcategory.id)) %>
              </li>
            <% end %>
            <!-- ... -->
          </ul>
        </li>
        <% end %>
      </ul>
    </div>
    <div class="top-bar-right">
      <ul class="dropdown menu" data-dropdown-menu>
        <%if signed_in?%>
          <li>
            <%=link_to(current_user.email, edit_user_registration_path)%>
          </li>
          <li>
            <%=link_to("Logout", destroy_user_session_path, method: :delete)%>
          </li>
          <li>
            <!-- this is supposed to show the current users shopping cart count. -->
            <%= link_to cart_path do%>
              My Cart (<span class="cart-count"><%=current_user.cart_count%></span>)
            <%end%>
          </li>
        <%else%>
          <li>
            <%=link_to("Register", new_user_registration_path)%>
          </li>
          <li>
            <%=link_to("Login", new_user_session_path)%>
          </li>
        <%end%>
          <li>
            <div class="aa-input-container" id="aa-input-container">
              <input type="search" id="aa-search-input" class="aa-input-search" placeholder="Search for players or teams..." name="search" autocomplete="off" />
              <svg class="aa-input-icon" viewBox="654 -372 1664 1664">
                  <path d="M1806,332c0-123.3-43.8-228.8-131.5-316.5C1586.8-72.2,1481.3-116,1358-116s-228.8,43.8-316.5,131.5  C953.8,103.2,910,208.7,910,332s43.8,228.8,131.5,316.5C1129.2,736.2,1234.7,780,1358,780s228.8-43.8,316.5-131.5  C1762.2,560.8,1806,455.3,1806,332z M2318,1164c0,34.7-12.7,64.7-38,90s-55.3,38-90,38c-36,0-66-12.7-90-38l-343-342  c-119.3,82.7-252.3,124-399,124c-95.3,0-186.5-18.5-273.5-55.5s-162-87-225-150s-113-138-150-225S654,427.3,654,332  s18.5-186.5,55.5-273.5s87-162,150-225s138-113,225-150S1262.7-372,1358-372s186.5,18.5,273.5,55.5s162,87,225,150s113,138,150,225  S2062,236.7,2062,332c0,146.7-41.3,279.7-124,399l343,343C2305.7,1098.7,2318,1128.7,2318,1164z" />
              </svg>
            </div>
          </li>
          <li>
            <button type="button" class="button">Search</button>
          </li>
      </ul>
    </div>
  </div>
</div>
